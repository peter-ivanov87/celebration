<?php $_categories = $this->getCategoryCollection(); ?>
<?php if($_categories->count()): ?>
<div class="block">
    <div class="block-title">
        <strong><span><?php echo $this->__('Filter By Categories') ?></span></strong>
    </div>
    <div class="block-content">
       <ul id="narrow-by-list">
           <?php if (Mage::helper('zeon_faq')->getIsDisplayMfaq()): ?>
           <li><a href="<?php echo $this->getUrl('faq/mfaq') ?>"><?php echo $this->__('Most Frequently Asked Questions') ?></a></li>
           <?php endif;?>
           <?php foreach ($_categories as $_category): ?>
            <li <?php if($this->isActiveCategory($_category)): ?>class="active"<?php endif;?>>
                   <a href="<?php echo $this->getUrl('faq/'.$_category->getIdentifier()) ?>">
                   <?php echo $this->__($_category->getTitle()) ?></a>
            </li>
            <?php endforeach; ?>
       </ul>
    </div>
</div>
<?php endif; ?>