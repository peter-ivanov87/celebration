		 <events>
            <admin_session_user_login_success>
            <observers>
                <mcore>
                    <type>singleton</type>
                    <class>mcore/observer</class>
                    <method>adloginsuccess</method>
                </mcore>
            </observers>
           </admin_session_user_login_success>
           
            <controller_action_predispatch_adminhtml_index_logout>
            	<observers>		
            		<mcore>			
	                     <class>MW_Mcore_Model_Observer</class>
                    	 <method>logoutupdate</method>	                     
	                </mcore>					
                </observers>
            </controller_action_predispatch_adminhtml_index_logout> 
    	</events>
    </adminhtml>   
    
