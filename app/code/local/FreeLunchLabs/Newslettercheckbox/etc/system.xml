<?xml version="1.0"?>
<config>
    <sections>
        <newsletter>
            <groups>
                <newslettercheckbox translate="label" module="newslettercheckbox">
                    <label>Newsletter Checkbox in Checkout</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <checked translate="label">
                            <label>Checked by default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If set to "Yes" the checkbox will be checked when the checkout page loads.</comment>
                        </checked>
                        <if_subscribed translate="label">
                            <label>Hide newsletter checkbox if already subscribed</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If set to "Yes" the checkbox will NOT be displayed if the LOGGED IN user is already subscribed.</comment>
                        </if_subscribed>
                        <allow_unsubscribe translate="label">
                            <label>Allow existing subscribers to unsubscribe in checkout</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If set to "Yes", existing newsletters subscribers will be removed from your list if they submit an order and the newsletter checkbox is not checked.</comment>
                        </allow_unsubscribe>
                        <checkbox_label translate="label">
                            <label>Checkbox Label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Text that appears next to checkbox.</comment>
                        </checkbox_label>
