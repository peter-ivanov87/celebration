<?xml version="1.0"?>
<config>
    <modules>
        <NovaWorks_Ajax>
            <version>1.0</version>
        </NovaWorks_Ajax>
    </modules>
    <frontend>
        <routers>
            <ajax>
                <use>standard</use>
                <args>
                    <module>NovaWorks_Ajax</module>
                    <frontName>ajax</frontName>
                </args>
            </ajax>
        </routers>
        <layout>
            <updates>
                <ajax>
                    <file>ajax.xml</file>
                </ajax>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <ajax>
                <class>NovaWorks_Ajax_Model</class>
                <resourceModel>ajax_mysql4</resourceModel>
            </ajax>
            <ajax_mysql4>
                <class>NovaWorks_Ajax_Model_Mysql4</class>
                <entities>
                    <ajax>
                        <table>ajax</table>
                    </ajax>
                </entities>
            </ajax_mysql4>
        </models>
        <resources>
            <ajax_setup>
                <setup>
                    <module>NovaWorks_Ajax</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ajax_setup>
            <ajax_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ajax_write>
            <ajax_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ajax_read>
        </resources>
        <blocks>
        	<checkout>
        		<rewrite>
        			<cart_sidebar>NovaWorks_Ajax_Block_Cart_Sidebar</cart_sidebar>
        		</rewrite>
        	</checkout>
            <ajax>
                <class>NovaWorks_Ajax_Block</class>
            </ajax>
        </blocks>
        <helpers>
            <ajax>
                <class>NovaWorks_Ajax_Helper</class>
            </ajax>
        </helpers>
    </global>
	<default>
		<themeoptions_general>
			<prodcuts_list_page> 
				<ajax_cart>1</ajax_cart>
				<ajax_compare>1</ajax_compare>
				<ajax_wishlist>1</ajax_wishlist>
				<ajax_quickview>1</ajax_quickview>
			</prodcuts_list_page> 
		</themeoptions_general>	
	</default>   
</config>