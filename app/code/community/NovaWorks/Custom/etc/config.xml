<?xml version="1.0"?>
<config>
  <modules>
    <NovaWorks_Custom>
      <version>0.1.0</version>
    </NovaWorks_Custom>
  </modules>
  <frontend>
    <routers>
      <custom>
        <use>standard</use>
          <args>
            <module>NovaWorks_Custom</module>
            <frontName>custom</frontName>
          </args>
      </custom>
    </routers>
		<layout>
		  <updates>
			<custom>
			  <file>custom.xml</file>
			</custom>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <custom>
        <class>NovaWorks_Custom_Helper</class>
      </custom>
    </helpers>
	<blocks>
	  <custom>
		<class>NovaWorks_Custom_Block</class>
	  </custom>
	</blocks>
  </global>
</config> 