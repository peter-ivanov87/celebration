<config>
    <modules>
        <NovaWorks_ThemeOptions>
            <version>0.1.0</version>
        </NovaWorks_ThemeOptions>
    </modules>
    <frontend>
        <routers>
            <themeoptions>
                <use>standard</use>
                <args>
                    <module>NovaWorks_ThemeOptions</module>
                    <frontName>themeoptions</frontName>
                </args>
            </themeoptions>
        </routers>
        <layout>
            <updates>
                <themeoptions>
                    <file>themeoptions.xml</file>
                </themeoptions>
            </updates>
        </layout>
    </frontend>
    
    <global>
        <models>
            <themeoptions>
                <class>NovaWorks_ThemeOptions_Model</class>
            </themeoptions>
        </models>
        <blocks>
            <themeoptions_general>
                <class>NovaWorks_ThemeOptions_Block</class>
            </themeoptions_general>
            <themeoptions_homepage><class>ThemeOptions_ExtraConfig_Block</class></themeoptions_homepage>  
            <themeoptions_theming><class>ThemeOptions_ExtraConfig_Block</class></themeoptions_theming>            
        </blocks>
        <helpers>
            <themeoptions>
                <class>NovaWorks_ThemeOptions_Helper</class>
            </themeoptions>           
        </helpers>
    <events>
      <adminhtml_controller_action_predispatch_start>
        <observers>
          <novaworks_themeoptions_observer>
            <type>singleton</type>
            <class>NovaWorks_ThemeOptions_Controller_Observer</class>
            <method>overrideTheme</method>
          </novaworks_themeoptions_observer>
        </observers>
      </adminhtml_controller_action_predispatch_start>      
    </events> 
	<resources>
        <novaworks_themeoptions_setup>
                <setup>
                    <module>NovaWorks_ThemeOptions</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>          
        </novaworks_themeoptions_setup>
    </resources>   
    <page>
      <layouts>
        <avena_custom_page translate="label">
          <label>avena Custom Page</label>
          <template>page/avena-custom-page.phtml</template>
          <layout_handle>avena_custom_page</layout_handle>
        </avena_custom_page>
        <!-- add more layouts here -->
      </layouts>
    </page>        
    </global>
	<default>
		<themeoptions_general>
			<general_options>
				<responsive_layout>1</responsive_layout>
				<menu_type>default-menu</menu_type>
				<menu_stay_on_top>1</menu_stay_on_top>
				<gotop_button>1</gotop_button>
			</general_options>
			<prodcuts_list_page>
				<layout_one_column>4</layout_one_column>
				<layout_two_column>4</layout_two_column>
				<layout_three_column>3</layout_three_column>
				<standard_image_width>310</standard_image_width>
				<standard_image_height>395</standard_image_height>
				<shopping_options>1</shopping_options>
				<rating_wishlist_compare>1</rating_wishlist_compare>
				<new_product_label>1</new_product_label>
				<sale_product_label>1</sale_product_label>
				<image_product_hover>1</image_product_hover>
				<image_product_hover>1</image_product_hover>
			</prodcuts_list_page>
			<prodcuts_details_page>
				<product_main_width>470</product_main_width>
				<product_main_height>598</product_main_height>
				<product_thumbnail_width>105</product_thumbnail_width>
				<product_thumbnail_height>134</product_thumbnail_height>
			</prodcuts_details_page>
		</themeoptions_general>
		
		<themeoptions_theming>
			<theme_general>
				<theme_layout>1</theme_layout>
				<heading_font>Crimson Text</heading_font>		
			</theme_general>	
			<theme_presets>
				<l_background_color>#FFFFFF</l_background_color>
				<l_text_color>#656565</l_text_color>
				<l_link_color>#828282</l_link_color>	
				<l_active_color>#eea00c</l_active_color>	
				<l_heading_color>#414141</l_heading_color>
				<l_icons_color>#767676</l_icons_color>
				<l_buttons_color>#eea00c</l_buttons_color>
				<l_buttons_hover_color>#767676</l_buttons_hover_color>
				
			</theme_presets>																		
		</themeoptions_theming>		

	</default>
</config>